
<div class="vogue-product-gallery">
  <!-- Main Image Display -->
  <div class="vogue-main-image">
    <img
      src="{{ product.featured_image | img_url: '1024x1024' }}"
      alt="{{ product.title }}"
      id="vogue-main-image"
    />
  </div>

  <!-- Thumbnail Slider -->
  <div class="vogue-thumbnail-slider">
    {% for media in product.media %}
      {% if media.media_type == 'image' %}
        <div class="vogue-thumbnail" data-image="{{ media.src | img_url: '1024x1024' }}">
          <img
            src="{{ media.preview_image.src | img_url: '200x200' }}"
            alt="{{ media.alt }}"
            class="vogue-thumbnail-image"
          />
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
 .vogue-product-gallery {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rem;
  max-width: 800px;
  margin: 0 auto;
  font-family: "VogueFont", serif;
}

.vogue-main-image img {
  width: 100%;
  max-width: 600px;
  height: auto;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.vogue-thumbnail-slider {
  display: flex;
  gap: 1rem;
  justify-content: center;
  overflow-x: auto;
  padding: 10px 0;
  scroll-behavior: smooth;
}

.vogue-thumbnail {
  cursor: pointer;
  transition: transform 0.3s ease-in-out;
}

.vogue-thumbnail:hover {
  transform: scale(1.1);
}

.vogue-thumbnail img {
  width: 80px;
  height: auto;
  border: 1px solid #ddd;
  border-radius: 5px;
  transition: border-color 0.3s;
}

.vogue-thumbnail img:hover {
  border-color: #333;
}

  </style>
  <script>
  document.addEventListener("DOMContentLoaded", () => {
  const thumbnails = document.querySelectorAll(".vogue-thumbnail");
  const mainImage = document.getElementById("vogue-main-image");

  thumbnails.forEach((thumbnail) => {
    thumbnail.addEventListener("click", () => {
      const newImage = thumbnail.getAttribute("data-image");
      mainImage.setAttribute("src", newImage);
    });
  });
});


  </script>
