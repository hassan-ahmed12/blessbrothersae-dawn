<footer class="custom-footer">
  <div class="footer-container">
    <!-- Logo and About Section -->
    <div class="footer-section">
      <a href="{{ routes.root_url }}" class="footer-logo">
        {%- if settings.logo != blank -%}
          <div class="footer-logo-wrapper">
            {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
            {{ settings.logo | image_url: width: 300 | image_tag: alt: logo_alt, class: 'footer-logo-img' }}
          </div>
        {%- else -%}
          <h2 class="footer-logo-text">{{ shop.name }}</h2>
        {%- endif -%}
      </a>
      <p class="footer-description">
        {{ settings.footer_about_text }}
      </p>
    </div>

    <!-- Navigation Links -->
    <div class="footer-section">
      <h3>About Us</h3>
      <ul>
        {% for link in linklists.about-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer-section">
      <h3>Furniture Sets</h3>
      <ul>
        {% for link in linklists.furniture-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer-section">
      <h3>Customer Service</h3>
      <ul>
        {% for link in linklists.service-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
      <p class="contact-number">{{ settings.footer_contact_number }}</p>
    </div>

    <!-- Join Section -->
    <div class="footer-section">
      <h3>Join Bless Brothers</h3>
      <p>{{ settings.footer_join_text }}</p>
      <form method="post" action="/contact#contact_form">
        <input type="email" name="contact[email]" placeholder="Email Address" required>
        <button type="submit">Submit</button>
      </form>
      <address>
        {{ settings.footer_address }}
      </address>
      <div class="social-icons">
        <a href="{{ settings.tiktok_url }}" target="_blank">TikTok</a>
        <a href="{{ settings.facebook_url }}" target="_blank">Facebook</a>
        <a href="{{ settings.instagram_url }}" target="_blank">Instagram</a>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    <ul class="footer-links">
      <li><a href="/terms-of-use">Terms of Use</a></li>
      <li><a href="/privacy-policy">Privacy Policy</a></li>
      <li><a href="/cookie-policy">Cookie Policy</a></li>
      <li><a href="/cookie-settings">Cookie Settings</a></li>
    </ul>
  </div>
</footer>

<style>
  /* Footer Container */
.custom-footer {
  background-color: #f8f8f8;
  padding: 40px 20px;
  font-family: Arial, sans-serif;
  color: #333;
}

.footer-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  margin-bottom: 20px;
}

/* Logo and About Section */
.footer-logo {
  text-decoration: none;
}

.footer-logo-img {
  max-width: 100%;
  height: auto;
}

.footer-description {
  margin-top: 10px;
  font-size: 14px;
  color: #666;
}

/* Footer Sections */
.footer-section h3 {
  font-size: 16px;
  margin-bottom: 10px;
}

.footer-section ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-section ul li {
  margin-bottom: 5px;
}

.footer-section ul li a {
  text-decoration: none;
  color: #333;
  transition: color 0.3s;
}

.footer-section ul li a:hover {
  color: #ff0000;
}

/* Join Section */
.footer-section form {
  display: flex;
  gap: 10px;
  margin-bottom: 15px;
}

.footer-section input[type="email"] {
  padding: 8px;
  flex: 1;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.footer-section button {
  padding: 8px 15px;
  background-color: #009688;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background 0.3s;
}

.footer-section button:hover {
  background-color: #00796b;
}

.footer-section address {
  font-style: normal;
  font-size: 14px;
  color: #666;
  margin-top: 10px;
}

.social-icons a {
  margin-right: 10px;
  text-decoration: none;
  color: #333;
  transition: color 0.3s;
}

.social-icons a:hover {
  color: #ff0000;
}

/* Footer Bottom */
.footer-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ddd;
  padding-top: 20px;
  font-size: 14px;
  color: #666;
}

.footer-links {
  list-style: none;
  display: flex;
  gap: 10px;
  margin: 0;
  padding: 0;
}

.footer-links li a {
  text-decoration: none;
  color: #333;
  transition: color 0.3s;
}

.footer-links li a:hover {
  color: #ff0000;
}

  </style>
