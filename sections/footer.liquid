<footer class="custom-footer">
  <div class="footer-top">
    <!-- Left Column: Logo -->
    <div class="footer-logo-section">
      <a href="{{ routes.root_url }}" class="footer-logo-link">
        {%- if settings.logo != blank -%}
          {{ settings.logo | image_url: width: 200 | image_tag: alt: shop.name, class: 'footer-logo' }}
        {%- else -%}
          <h2>{{ shop.name }}</h2>
        {%- endif -%}
      </a>
    </div>

    <!-- Navigation Links -->
    <div class="footer-nav-section">
      <div class="footer-nav-column">
        <h4>About Us</h4>
        <ul>
          {% for link in linklists.about-menu.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="footer-nav-column">
        <h4>Furniture Sets</h4>
        <ul>
          {% for link in linklists.furniture-menu.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="footer-nav-column">
        <h4>Customer Service</h4>
        <ul>
          {% for link in linklists.service-menu.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
        <p class="contact-number">{{ settings.footer_contact_number }}</p>
      </div>
    </div>

    <!-- Join Section -->
    <div class="footer-join-section">
      <h4>Join Bless Brothers</h4>
      <p>{{ settings.footer_join_text }}</p>
      <form method="post" action="/contact#contact_form">
        <input type="email" name="contact[email]" placeholder="Email Address" required>
        <button type="submit">Submit</button>
      </form>
      <address>
        {{ settings.footer_address }}
      </address>
      <div class="footer-social-icons">
        <a href="{{ settings.tiktok_url }}" target="_blank"><i class="fab fa-tiktok"></i></a>
        <a href="{{ settings.facebook_url }}" target="_blank"><i class="fab fa-facebook-f"></i></a>
        <a href="{{ settings.instagram_url }}" target="_blank"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    <ul>
      <li><a href="/terms-of-use">Terms of Use</a></li>
      <li><a href="/privacy-policy">Privacy Policy</a></li>
      <li><a href="/cookie-policy">Cookie Policy</a></li>
      <li><a href="/cookie-settings">Cookie Settings</a></li>
    </ul>
  </div>
</footer>


