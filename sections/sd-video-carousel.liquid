{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="video-carousel_section color-{{ section.settings.color_scheme }}">
    <div
      class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
      {% if settings.animations_reveal_on_scroll %}
        data-cascade
      {% endif %}
    >
      {%- unless section.settings.title == blank -%}
          <div class="main-heading">
            <h2>{{ section.settings.title }}</h2>
          </div>
      {%- endunless -%}

      <div class="video-carousel" >
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            {% assign video_id = block.settings.video.id %}
            <div class="video-slide swiper-slide" id="video-slide-{{ forloop.index }}" {{ block.shopify_attributes }}>
              <div id="video-wrapper-{{ video_id }}" class="video-wrapper">
                {% comment %} {{ block.settings.video.sources[0].url }} {% endcomment %}
                {{ block.settings.video | video_tag: controls: false, autoplay: true, loop: true, muted: true, class: "video_slide", image_size: '700x' }}
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
      
    </div>
</div>

{% schema %}
{
  "name": "SD Video Slider",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Video Carousel"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "limit": 10,
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Select Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SD Video Slider",
      "blocks": [
        {
          "type": "video"
        },
        {
          "type": "video"
        },
        {
          "type": "video"
        },
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}
